                    Command="{Binding EditCommand}"/>
            <Button x:Name="button1" Content="Delete" Height="33" VerticalAlignment="Center" HorizontalAlignment="Left" Width="66"
                    Command="{Binding RemoveCommand}"/>
        </ToolBar>-->
